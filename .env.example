# Flask Configuration
SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///derme.db

# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Feature Flags
# Enable/disable Gemini for OCR (true/false)
USE_GEMINI_FOR_OCR=true

# Enable/disable Gemini for allergen information (true/false)
USE_GEMINI_FOR_ALLERGEN_INFO=true

# Fallback to Tesseract OCR if Gemini fails or is unavailable (true/false)
FALLBACK_TO_TESSERACT=true

# Allergen Analysis Settings
CONFIDENCE_THRESHOLD=0.6
MAX_ALLERGEN_SYNONYMS=10

# HuggingFace Spaces (automatically detected)
# SPACE_ID=your-space-id
